<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.Aishopssh.Entites.Goods" table="tb_goods" schema="e_shopwebsite">
        <id name="id" column="id">
            <generator class="native"/>
        </id>
        <property name="name" column="Name"/>
        <property name="introduction" column="Introduction"/>
        <property name="addtime" column="Addtime"/>
        <property name="level" column="Level"/>
        <property name="model" column="Model"/>
        <property name="picture" column="Picture"/>
        <property name="num" column="Num"/>
        <property name="purchaseTime" column="PurchaseTime"/>
        <property name="isRecommend" column="Is_Recommend"/>
        <property name="typeIdLevel1" column="TypeID_Level_1"/>
        <property name="typeIdLevel2" column="TypeID_Level_2"/>
        <property name="typeIdLevel3" column="TypeID_Level_3"/>
        <property name="memberPrice" column="MemberPrice"/>
        <property name="marketPirce" column="MarketPirce"/>
        <property name="brand" column="Brand"/>
        <property name="isSpecialPrice" column="Is_SpecialPrice"/>
        <set name="tbCartlistsById" inverse="true">
            <key>
                <column name="GoodsID"/>
            </key>
            <one-to-many not-found="ignore" class="com.Aishopssh.Entites.Cartlist"/>
        </set>
        <set name="tbCommentsById" inverse="true">
            <key>
                <column name="GoodsID"/>
            </key>
            <one-to-many not-found="ignore" class="com.Aishopssh.Entites.Comments"/>
        </set>
    </class>
</hibernate-mapping>