<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <package name="welcomepage" namespace="/" extends="json-default">
        <action name="IndexShopList"
                class="com.Aishop.Action.WelcomePageAction.IndexShopList" method="getWelcomePageGoods">
            <result type="json">
                <param name="root">goodsList</param>
            </result>
        </action>
    </package>


    <package name="test" namespace="/" extends="struts-default">
        <action name="Test"
                class="com.Aishop.Action.WelcomePageAction.TestTran" method="TestT">
            <result name="yes" type="redirect">
                <param name="location">/Test.jsp</param>
                <param name="goodsList">${goodsList}</param>
            </result>
        </action>
    </package>
</struts>